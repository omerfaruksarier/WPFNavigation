<Window x:Class="WPFNavigation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFNavigation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top">
            <Label Name="LiveTimeLabel" Content="%TIME%" HorizontalAlignment="Right" Margin="600,0,0,0" VerticalAlignment="Top" Height="35" Width="186" FontSize="22" FontWeight="Bold" Foreground="Red" />
        </StackPanel>
        <Frame x:Name="Main" Margin="0,45,0,0" />
    </Grid>
</Window>
